{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    {{ parent() }}
    <h1 class="bg-success text-success text-center">{{ team.name }}</h1>
    <table class="table table-bordered table-hover">
        <tr>
            <th class="bg-success text-success text-center">Players</th>
            <th class="bg-success text-success text-center">Coaches</th>
            <th class="bg-success text-success text-center">Games</th>
        </tr>
        <tr>
            <td>

                <div>
                    <p class="bg-success text-success text-center">FORWARDS</p>
                    {% for player in team.players %}

                        {% if player.position == 'Forward' %}
                            <div class="text-center">
                                <a href="{{ path('show_player', {'id': player.id }) }}">{{ player.name }}</a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

                <div>
                    <p class="bg-success text-success text-center">DEFENDERS</p>
                    {% for player in team.players %}

                        {% if player.position == 'Defender' %}
                            <div class="text-center">
                                <a href="{{ path('show_player', {'id': player.id }) }}">{{ player.name }}</a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div>
                    <p class="bg-success text-success text-center">MIDFIELDERS</p>
                    {% for player in team.players %}

                        {% if player.position == 'Midfielder' %}
                            <div class="text-center">
                                <a href="{{ path('show_player', {'id': player.id }) }}">{{ player.name }}</a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div>
                    <p class="bg-success text-success text-center">GOAL KEEPERS</p>
                    {% for player in team.players %}

                        {% if player.position == 'Goal keeper' %}
                            <div class="text-center">
                                <a href="{{ path('show_player', {'id': player.id }) }}">{{ player.name }}</a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

            </td>
            <td>

                {% for coach in team.coaches %}
                    <div class="text-center">
                        <a href="{{ path('show_coach', {'id': coach.id}) }}">
                            {{ coach.name }}
                        </a>
                    </div>

                {% endfor %}



            </td>
            <td>

                <div>
                    {% for game in games %}
                        <div class="text-center">
                            <a href="{{ path('show_game_by_id', {'id': game.id}) }}">
                                {{ game.firstTeam.name }} ( {{ game.firstTeamScore }} - {{ game.secondTeamScore }} ) {{ game.secondTeam.name }}
                            </a>

                        </div>
                    {% endfor %}
                </div>




            </td>
        </tr>
    </table>

{% endblock %}