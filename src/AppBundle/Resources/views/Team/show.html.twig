{% extends 'base.html.twig' %}

{% block title %}{{ team.name }}{% endblock %}

{% block body %}

    {{ parent() }}

    <div class="clearfix bg-info">
        <h1 class="text-primary bg-info">{{ team.name }}

            <img src="{{ team.country.flag }}">
        </h1>
        <div class="pull-left">



        </div>


    </div>

    <div class="clearfix">
        <h3 class="text-success">Info:</h3>
        <div class="pull-left">
            <p class="text-left" style="width: 500px">
                {{ team.country.shortHistory }}
            </p>
        </div>
        <div class="pull-right">

            {% if games is not empty %}
                <table class="table bg-success table-hover">
                    <tr>
                        <td class="text-success">Games</td>
                    </tr>
                    {% for game in games  %}
                        <tr>
                            <td>
                                <a class="center-block" href="{{ path('show_game_by_id', {'id': game.id}) }}">
                                <span class="text-success bg-success">
                                    {{ game.firstTeam.name }}
                                </span>
                                    ( {{ game.firstTeamScore }} - {{ game.secondTeamScore }} )
                                <span class="text-success bg-success">
                                    {{ game.secondTeam.name }}
                                </span>
                                    (<span class="text-danger">
                                    {{ game.gameDate|date('d-m-Y') }}
                                </span>)
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}


            {% for game in games %}

            {% endfor %}

        </div>
    </div>

                                         {# Table Players #}


    <h2 class="text-success bg-success">Players</h2>
    <table id="players-table" class="table table-bordered table-striped table-condensed table-hover">
        <tr class="success">
            <th>Player name </th>
            <th>Position</th>
            <th>Squad Number</th>
            <th>Date of birth</th>
        </tr>
        {% for player in team.players %}
            <tr>
                <td>
                    <a href="{{ path('show_player', {'id': player.id }) }}"><span class="text-success">{{ player.name }} </span></a>
                </td>
                <td>{{ player.position }}</td>
                <td>{{ player.squadNumber }}</td>
                <td>{{ player.dateOfbirth|date('d-m-Y') }}</td>
            </tr>
        {% endfor %}


    </table>


                                              {# table Coaches #}


    <h2 class="bg-success text-success">Coaches</h2>
    <table class="table table-bordered table-striped table-hover">
        <tr class="success">
            <th>Name</th>
            <th>Nationality</th>
            <th>Date of birth</th>
        </tr>
        {% for coach in team.coaches %}
            <tr>
                <td><a href="{{ path('show_coach', {'id': coach.id}) }}"><span class="text-success">{{ coach.name }}</span></a>
                </td>
                <td>{{ coach.nationality }}</td>
                <td>{{ coach.dateOfBirth|date('d-m-Y') }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}