{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    {% for group in groups %}

        <div>
            <div>
                <h3 class="bg-success text-success text-center">
                    <a  href="{{ path('show_group', {'name': group.name}) }}">
                        Group {{ group.name }}
                    </a>

                </h3>

                <p class="bg-success text-center text-success">Teams</p>
                {% for team in group.teams %}
                    <p class="text-center">
                        <a href="{{ path('show_country', {'slug': team.country.slug}) }}">
                            <img src="{{ team.country.flag }}">
                        </a>
                        <a href="{{ path('show_team', {'slug': team.slug}) }}">
                            {{ team.name }}
                        </a>

                    </p>
                {% endfor %}
            </div>

            <div>
                <p class="bg-success text-center text-info">Games schedule:</p>
                {% for game in group.games %}
                    <p class="text-left text-info text-center">
                        {{ game.firstTeam.name }} vs {{ game.secondTeam.name }}
                        <span class="text-danger">
                        {{ game.gameDate|date('d-m-Y') }}
                        </span>
                        at
                        <span class="text-danger">
                         {{ game.gameStartsAt}}
                        </span>
                        in
                        <span class="text-danger">
                         {{ game.city}}
                        </span>
                    </p>

                {% endfor %}
            </div>
        </div>

    {% endfor %}


{% endblock %}

{% block title %}
All Groups
{% endblock %}

