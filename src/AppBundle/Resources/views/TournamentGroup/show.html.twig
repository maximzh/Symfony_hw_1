{% extends 'base.html.twig' %}
{% block title %}Group{% endblock %}

{% block body %}
    {{ parent() }}
    <h1 class="bg-primary text-center">Group {{ teams[0].tournamentGroup.name }}</h1>
    <h2 class="bg-primary text-center">teams</h2>
    {% for team in teams %}
    <p class="text-center">{{ team.name }}</p>
    {% endfor %}

    <div>
        <h2 class="bg-primary text-center">games</h2>
        {% for game in games %}
           <div class="bg-info text-center">
               <p>
                   {{ game.firstTeam.name }} - {{ game.secondTeam.name }}
               </p>
               <p>
                   {{ game.gameDate|date("d-m-Y") }}
                   <span class="text-danger">
                       ( {{ game.city }} )
                   </span>

               </p>
               <p>
                   Starts at: {{ game.gameStartsAt }}
               </p>


           </div>

        {% endfor %}
    </div>



{% endblock %}