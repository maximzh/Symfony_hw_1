                    {% endif %}
                {% endfor %}
            </td>
            <td>
                {% for game in games %}
                    {% if game.tournamentGroup.name == 'D' %}
                        <p class="bg-warning">{{ game.firstTeam.name }} - {{ game.secondTeam.name }}</p>
                        <p class="bg-info">Date and place<br>{{ game.gameDate|date('d-m-Y') }} ({{ game.gameStartsAt }})<br><span class="text-danger">{{ game.city }}</span> </p>
                    {% endif %}
                {% endfor %}
            </td>
            <td>
                {% for game in games %}
                    {% if game.tournamentGroup.name == 'E' %}
                        <p class="bg-warning">{{ game.firstTeam.name }} - {{ game.secondTeam.name }}</p>
                        <p class="bg-info">Date and place<br>{{ game.gameDate|date('d-m-Y') }} ({{ game.gameStartsAt }})<br><span class="text-danger">{{ game.city }}</span> </p>
                    {% endif %}
                {% endfor %}
            </td>
            <td>
                {% for game in games %}
                    {% if game.tournamentGroup.name == 'F' %}
