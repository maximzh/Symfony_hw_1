{% extends 'admin.html.twig' %}

{% block body %}
    {{ parent() }}

    <h2 class="bg-success">
        <a href="{{ path('new_group') }}">Create a new group</a>
    </h2>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Group</th>
            <th>Edit</th>
            <th>Remove</th>
        </tr>
        {% for group in groups %}

            <tr>
                <td>
                    <span class="text-success">{{ group.name }}</span>
                </td>

                <td>
                    <a href="{{ path('edit_group', {'name': group.name}) }}">
                        Edit
                    </a>
                </td>
                <td>
                    <a href="{{ path('remove_group', {'name': group.name}) }}">
                        Remove
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

