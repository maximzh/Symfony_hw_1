            <th> <a href="{{ path('show_group', {'name': 'F'}) }}">Group F</a></th>

        </tr>
        <tr>
            <td>
                {% for country in countries %}
                    {% if country.team.tournamentGroup.name == 'A' %}
                        <p>
                            <a href="{{ path('show_country', {'slug': country.slug}) }}">
                                <img class="img-circle" src="{{ country.flag }}">
                            </a>
                            <a href="{{ path('show_team', {'slug': country.team.slug}) }}">
                                {{ country.team.name }}
                            </a>
                            <br>
                        </p>
                    {% endif %}
                {% endfor %}
            </td>

            <td>
                {% for country in countries %}
                    {% if country.team.tournamentGroup.name == 'B' %}
