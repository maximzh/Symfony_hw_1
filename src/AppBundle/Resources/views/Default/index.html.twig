                        <p>
                            <a href="{{ path('show_country', {'slug': country.slug}) }}">
                                <img class="img-circle" src="{{ country.flag }}">
                            </a>
                            <a href="{{ path('show_team', {'slug': country.team.slug}) }}">
                                {{ country.team.name }}
                            </a>
                            <br>
                        </p>
                    {% endif %}
                {% endfor %}
            </td>
        </tr>
        <tr class="bg-info"><td></td><td></td><td></td><td></td><td></td><td></td></tr>
    </table>

    <h2 class="bg-danger text-danger">UEFA ranks:</h2>
    <table class="table table-striped table-hover table-bordered table-condensed">
        <tr>
            <th class="bg-info">Country</th>
            <th class="bg-info">Rank</th>
        </tr>

        {% for country in countries %}
            <tr>
                <td>{{ country.name }}</td>
                <td>{{ country.uefaRank }}</td>
            </tr>
        {% endfor %}

    </table>


{% endblock %}