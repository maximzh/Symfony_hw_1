{% extends 'base.html.twig' %}

{% block title %}Euro 2016{% endblock %}

{% block body %}
    {{ parent() }}



    <table class="table">
        <tr class="alert-info">
            <th> <a href="{{ path('show_group', {'name': 'A'}) }}">Group A</a></th>
            <th> <a href="{{ path('show_group', {'name': 'B'}) }}">Group B</a></th>
            <th> <a href="{{ path('show_group', {'name': 'C'}) }}">Group C</a></th>
