<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/app.css') }}" rel="stylesheet"/>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}

    <nav class="navbar navbar-brand">
        <ul class="nav navbar-nav">
            <li class="active">
                <a href="{{ path('homepage') }}">Homepage</a>
            </li>
            <li>
                <a href="{{ path('show_all_players') }}">All Players</a>
            </li>
            <li>
                <a href="{{ path('show_all_groups') }}">Groups</a>
            </li>
            <li>
                <a href="{{ path('show_all_games') }}">Games</a>
            </li>
        </ul>
    </nav>
    <h1 class="text-info bg-danger img-rounded">
        <img src="{{ asset('pictures/Euro2016.png') }}">
        Euro 2016 France

    </h1>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}
</body>
</html>